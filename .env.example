# ==============================================
# SMTP EMAIL CONFIGURATION
# ==============================================

# SMTP server host
SMTP_HOST=webmail.api-server.cloud

# SMTP server port (587 for TLS, 465 for SSL)
SMTP_PORT=465

# SMTP authentication credentials
SMTP_USER=proofcaptcha@api-server.cloud
SMTP_PASSWORD=Bulusari25

# Email address to send from
SMTP_FROM_EMAIL=proofcaptcha@api-server.cloud

# TLS settings for SMTP connection
# Set to 'false' to allow self-signed certificates (not recommended for production)
SMTP_TLS_REJECT_UNAUTHORIZED=true

# TLS servername for certificate validation
